<view class="login">

   <view class="login-box">
      <view class="username">
        <text>用户名</text>
        <input class="username-box" placeholder="用户名" type="text" bindinput="usernameinput"/>      
      </view>
      <view class="password">
        <text>密码</text>
        <input class="password-box" placeholder="密码" type="password" bindinput="passwordinput"/>
      </view>
  </view>

    <view class="signin">
      <button type="submit" catchtap="signin">登录</button>
      <button type="submit" catchtap="register">注册</button>
    </view>

</view>
