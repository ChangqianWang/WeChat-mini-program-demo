<view class="login">
    <view class="login-box">
      <view class="username">
        <text>用户名</text>
        <input class="username-box" placeholder="用户名" type="text" bindinput="usernameinput"/>      
      </view>
      <view class="password">
        <text>密码</text>
        <input class="password-box" placeholder="密码" type="password" bindinput="passwordinput"/>
      </view>
      <view class="passwordconfirm">
          <text>密码确认</text>
          <input class="passwordconfirm-box" placeholder="密码确认" value="" type="password" bindinput="passwordconfirminput" />
      </view>
    </view>
    <view class="signin">
      <button type="submit" catchtap="signin">注册</button>
    </view>
  </view>
